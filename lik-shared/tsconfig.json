{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["dom", "es2015"],
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es5",
        "types": ["jest"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./common/**/*.ts", "./pef-components/**/*.ts", "./preismeldung-shared/**/*.ts"],
    "exclude": ["**/e2e/*.ts", "**/*.e2e-spec.ts", "node_modules"],
    "compileOnSave": false
}
