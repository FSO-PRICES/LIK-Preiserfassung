{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true,
        "baseUrl": "../node_modules",
        "target": "es5",
        "types": ["cypress"]
    },
    "include": ["integration/**/*.ts", "fixtures/**/*.ts"],
    "exclude": ["node_modules"]
}
